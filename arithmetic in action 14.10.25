def tempcheck(temperature):
    temperature = float(input("What is your temperature right now?: "))
    if temperature > 37.5:
        print("You have a fever, your temperature is too high.")
    elif temperature == 37.5:
        print("You are too warm.")
    else:
        print("Your temperature is okay.")
    return temperature

def oxygencheck(oxygen):
    oxygen = int(input("What is the current oxygen level?: "))
    if oxygen < 92:
        print("The air quality is too low.")
    else:
        print("The air quality is okay.")
    return oxygen

def heartratecheck(heartrate):
    heartrate = float(input("What is your current heart rate?: "))
    if 60 <= heartrate <= 100:
        print("Your heartrate is normal, you are safe.")
    else:
        print("You may be in danger, your HR is too low/high.") 
    return heartrate

