score = 0

def weekscore(score):
    monday = int(input("What is your step count for Monday?: "))
    friday = int(input("What is your step count for Friday?: "))
    if monday > friday:
        print("You started off the week strong with more steps on Monday than you did Friday!")
        score = score 
    elif friday > monday:
        print("You ended off the week better, getting more steps than you did at the start of the week!")
        score = score + 1
    else:
        print("You must've had the exact same steps, strict routine.")

    weekscore(score)
    return score

